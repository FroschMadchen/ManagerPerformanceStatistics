<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.screen.ActionProgect.createProject.CreateProjectFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/boxSecond"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/box_info_1"
            android:orientation="vertical"
            android:paddingStart="@dimen/main_pedding_start_end"
            android:paddingEnd="@dimen/main_pedding_start_end">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView3"
                android:layout_width="211dp"
                android:layout_height="172dp"
                android:layout_margin="@dimen/padding"
                android:src="@drawable/icon_photo"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="108dp"
                    android:layout_height="90dp"
                    android:src="@drawable/icon_photo" />
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="108dp"
                    android:layout_height="90dp"
                    android:src="@drawable/icon_photo" />
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="108dp"
                    android:layout_height="90dp"
                    android:src="@drawable/icon_photo" />
            </LinearLayout>
            <Button
                android:id="@+id/add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="+"
                android:textSize="25dp"
                android:src="@drawable/ic_add"/>

            <TextView
                android:id="@+id/aboutHotel"
                app:layout_constraintTop_toBottomOf="@id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_bold"
                android:paddingStart="@dimen/padding_start"
                android:paddingTop="@dimen/padding"
                android:text="О проекте"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/box1"
                app:layout_constraintTop_toBottomOf="@id/aboutHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_start">

                <TextView
                    android:id="@+id/bonus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:text="Менеджер проекта:"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/bonus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:paddingStart="10dp"
                    android:text="Васильковаю В.В."
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/box1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_start">

                <TextView
                    android:id="@+id/companyBuyerTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:text="Заказчик:"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/companyBuyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:paddingStart="@dimen/padding"
                    android:hint="ООО ' Хорошие люди '"

                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/box1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_start">

                <TextView
                    android:id="@+id/nameProjectTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:text="Название проекта:"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/nameProject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:paddingStart="@dimen/padding"
                    android:hint="Металлические конструкици "

                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/box1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_start">

                <TextView
                    android:id="@+id/statusTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:text="Статус проекта:"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:paddingStart="@dimen/padding"
                    android:text="В работе"

                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/box1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_start">

                <TextView
                    android:id="@+id/materialTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:text="Материал:"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:paddingStart="@dimen/padding"
                    android:hint="Бетон"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/boxSecond23"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boxSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/box_info_1"
            android:orientation="vertical"
            android:paddingStart="@dimen/main_pedding_start_end"
            android:paddingEnd="@dimen/main_pedding_start_end">

            <TextView
                android:id="@+id/descriptionTitle"
                app:layout_constraintTop_toBottomOf="@id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_bold"
                android:paddingStart="@dimen/padding_start"
                android:paddingTop="@dimen/padding"
                android:text="Детали"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/box13"
                app:layout_constraintTop_toBottomOf="@id/aboutHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_start">

                <TextView
                    android:id="@+id/descriptionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:text="О проекте:"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:padding="@dimen/padding_start"
                    android:paddingStart="10dp"
                    android:hint="МАФы из стеклофибробетона и стеклокомпозита по своим характеристикам отлично подходят для ландшафтного дизайна, оформления городских парков, жилищных комплексов и объектов социальной значимости.

Они пожароустойчивые в отличие от пенополистерола, антивандальные и влагоустойчивые в отличие от гипса, не крошатся и не рассыпаются как керамогранит, не боятся резких перепадов температур как натуральный камень, не трескаются от ультрафиолета как полимербетон."
                    android:textSize="18dp" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            app:layout_constraintTop_toBottomOf="@+id/boxSecond23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
