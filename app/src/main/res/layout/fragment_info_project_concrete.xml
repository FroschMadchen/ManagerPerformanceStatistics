<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray30"
    tools:context=".presentation.screen.Menu.BottomNavigationFrasments.concrete.InfoProjectConcreteFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >




    <LinearLayout
        android:id="@+id/boxSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_info_1"
        android:orientation="vertical"
        android:paddingStart="@dimen/main_pedding_start_end"
        android:paddingEnd="@dimen/main_pedding_start_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView3"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_margin="@dimen/padding"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:srcCompat="@drawable/concrete_image" />

        <TextView
            android:id="@+id/aboutHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_bold"
            android:paddingStart="@dimen/padding_start"
            android:paddingTop="@dimen/padding"
            android:text="О проекте"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/imageView3" />

        <LinearLayout
            android:id="@+id/box1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_start"
            app:layout_constraintTop_toBottomOf="@id/aboutHotel">

            <TextView
                android:id="@+id/bonus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:text="Менеджер проекта:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/bonus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:paddingStart="10dp"
                android:text="Васильковаю В.В."
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_start"
            app:layout_constraintTop_toBottomOf="@+id/box1">

            <TextView
                android:id="@+id/bonus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:text="Заказчик:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/bonus4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:paddingStart="@dimen/padding"
                android:text="ООО ' Хорошие люди '"

                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_start"
            app:layout_constraintTop_toBottomOf="@+id/box1">

            <TextView
                android:id="@+id/bonus4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:text="Статус проекта:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/bonus4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:paddingStart="@dimen/padding"
                android:text="В работе"

                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_start"
            app:layout_constraintTop_toBottomOf="@+id/box1">

            <TextView
                android:id="@+id/bonus6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:text="Материал:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/bonus7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:paddingStart="@dimen/padding"
                android:text="Бетон"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/boxSecond23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_info_1"
        android:orientation="vertical"
        android:paddingStart="@dimen/main_pedding_start_end"
        android:paddingEnd="@dimen/main_pedding_start_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boxSecond">

        <TextView
            android:id="@+id/aboutHotel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_bold"
            android:paddingStart="@dimen/padding_start"
            android:paddingTop="@dimen/padding"
            android:text="Детали"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/imageView3" />

        <LinearLayout
            android:id="@+id/box13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_start"
            app:layout_constraintTop_toBottomOf="@id/aboutHotel">

            <TextView
                android:id="@+id/bonus13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:text="О проекте:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/bonus23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:paddingStart="10dp"
                android:text="МАФы из стеклофибробетона и стеклокомпозита по своим характеристикам отлично подходят для ландшафтного дизайна, оформления городских парков, жилищных комплексов и объектов социальной значимости.

Они пожароустойчивые в отличие от пенополистерола, антивандальные и влагоустойчивые в отличие от гипса, не крошатся и не рассыпаются как керамогранит, не боятся резких перепадов температур как натуральный камень, не трескаются от ультрафиолета как полимербетон."
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_start"
            app:layout_constraintTop_toBottomOf="@+id/box1">

            <TextView
                android:id="@+id/bonus312"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:text="Заказчик:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/bonus431"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:padding="@dimen/padding_start"
                android:paddingStart="@dimen/padding"
                android:text="ООО ' Хорошие люди '"

                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>